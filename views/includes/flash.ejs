<% if (typeof success !== 'undefined' && success && success.length) { %>
  <div class="alert alert-success  alert-dismissible fade show" role="alert" col-6 offset-3>
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (typeof error !== 'undefined' && error && error.length) { %>
  <div class="alert alert-danger  alert-dismissible fade show" role="alert" col-6 offset-3>
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

